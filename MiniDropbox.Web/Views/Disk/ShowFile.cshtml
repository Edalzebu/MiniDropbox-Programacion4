@model MiniDropbox.Web.Models.MostrarArchivosModel


    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Mostrar</h3>
    </div>

    
    <div  class="modal-body">
        <div style="text-align: center">
            
            @{
                if (Model.file.ContentType == "mp4")
                {
                    <video width="320" height="240" controls>
                    <source src="movie.mp4" type="video/mp4">
                        <source src="movie.ogg" type="video/ogg">
                        Your browser does not support the video tag.
                    </video>
                }
                if (Model.file.ContentType == "mp3")
                {
                    <audio controls>
                      <source src="horse.ogg" type="audio/ogg">
                      <source src="horse.mp3" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                }
                if (Model.file.ContentType == "txt")
                {
                    <iframe src="demo_iframe.htm" name="iframe_a"></iframe>
                }
            }
            
            
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Atras</button>
        
    </div> 


